<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearIniciarSesion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="start"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtBienvenid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="36dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="36dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:text="Bienvenido@" />

    <TextView
        android:id="@+id/txtIniciasesinp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="36dp"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:textColor="#9B9B9B"
        android:textSize="20sp"
        android:text="Inicia sesión para continuar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnLock"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@color/ELEGABET"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mail"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/etEggMAIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_strong"
            android:drawablePadding="7dp"
            android:ellipsize="end"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:paddingBottom="7dp"
            android:paddingLeft="8dp"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:textSize="12sp"
            tools:ignore="Autofill" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtNotieneasdasdsuna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:ellipsize="end"
        android:gravity="left"
        android:paddingBottom="7dp"
        android:paddingTop="6dp"
        android:singleLine="true"
        android:textColor="@color/ELEGABET"
        android:textSize="12sp"
        android:text="Campo requerido" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnLock1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@color/ELEGABET"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mail"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/etEggMasdAIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_strong"
            android:drawablePadding="7dp"
            android:ellipsize="end"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:paddingBottom="7dp"
            android:paddingLeft="8dp"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:textSize="12sp"
            tools:ignore="Autofill" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtNassssssssotienesuna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:ellipsize="end"
        android:gravity="left"
        android:paddingBottom="7dp"
        android:paddingTop="6dp"
        android:singleLine="true"
        android:textColor="@color/ELEGABET"
        android:textSize="12sp"
        android:text="Campo requerido" />

    <LinearLayout
        android:id="@+id/linearRowhasolvidadot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="37dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/switchContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="2dp">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

        </FrameLayout>

        <TextView
            android:id="@+id/txtAcuerdatedemi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:text="Acuerdate de mi"
            android:textColor="#9B9B9B"
            android:textSize="12sp" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/IStxtHasolvidadot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text="¿Has olvidado tu contraseña?"
            android:textColor="#9B9B9B"
            android:textSize="12sp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ISbtnIniciarSesin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="100dp"
        android:background="@color/ELEGABET"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingStart="30dp"
        android:paddingTop="10dp"
        android:paddingEnd="30dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:text="INICIAR SESIÓN"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txtNotienesuna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingBottom="7dp"
        android:paddingTop="6dp"
        android:singleLine="true"
        android:textSize="12sp"
        android:textColor="#9B9B9B"
        android:text="¿No tienes una cuenta?" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ISbtnInsasdiciarSesin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="37dp"
        android:background="@drawable/button_background"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingStart="30dp"
        android:paddingTop="10dp"
        android:paddingEnd="30dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:text="CREAR AHORA"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</LinearLayout>
