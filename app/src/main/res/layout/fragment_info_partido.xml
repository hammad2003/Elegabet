<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearIniciarSesion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="start"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearColumnelegabet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:gravity="start"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/flecaiconatrashome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:layout_margin="16dp"
            app:tint="@color/white" />

        <LinearLayout
            android:id="@+id/linearRowbaraOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="157dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageBaraOne"
                android:layout_width="47dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_bara_48x47" />

            <LinearLayout
                android:id="@+id/linearColumnuefaeuropaleaTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtUEFAEuropaLeaTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="UEFA Europa League"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="0 : 1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="25sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageMadirdOne"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_madird_56x40" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRowbarcelona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBarcelona"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:text="Barcelona"
                android:textSize="16sp" />

            <View
                android:id="@+id/viewEllipseTwoOne"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/orange"
                android:gravity="center" />

            <TextView
                android:id="@+id/txtTimeOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:42"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txasdasdtBarcelona"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="Real Madrid"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRowtwelve"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:ellipsize="end"
                android:id="@+id/txtTwelve"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_weight="0.23"
                android:layout_width="0dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4dp"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="12"/>

            <TextView
                android:ellipsize="end"
                android:id="@+id/txtTiros"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="1dp"
                android:layout_weight="0.48"
                android:layout_width="0dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:text="Tiros"/>

            <TextView
                android:ellipsize="end"
                android:id="@+id/txtTwentyTwo"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="1dp"
                android:layout_weight="0.29"
                android:layout_width="0dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:text="22"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/linearRowtwelve1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView android:ellipsize="end"
                android:id="@+id/txtTwelve1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_weight="0.23"
                android:layout_width="0dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4dp"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="13"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtTiros1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="1dp"
                android:layout_weight="0.48"
                android:layout_width="0dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:text="Faltas"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtTwentyTwo1"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="1dp"
                android:layout_weight="0.29"
                android:layout_width="0dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:text="23"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/linearRowtwelve2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView android:ellipsize="end"
                android:id="@+id/txtTwelve2"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_weight="0.23"
                android:layout_width="0dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4dp"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="14"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtTiros2"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="1dp"
                android:layout_weight="0.48"
                android:layout_width="0dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:text="Pases"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtTwentyTwo2"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="1dp"
                android:layout_weight="0.29"
                android:layout_width="0dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:text="24"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/linearRowtwelve3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView android:ellipsize="end"
                android:id="@+id/txtTwelve3"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_weight="0.23"
                android:layout_width="0dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4dp"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="15"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtTiros3"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="1dp"
                android:layout_weight="0.48"
                android:layout_width="0dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:text="Posesión"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtTwentyTwo3"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="1dp"
                android:layout_weight="0.29"
                android:layout_width="0dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:text="25"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>