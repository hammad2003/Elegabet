<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameApuesta"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearModal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/ELEGABET"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toolbarToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="27dp"
            android:layout_marginStart="27dp"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:id="@+id/linearRowarrowleft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/flecaiconatrashome2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_back_ios_new_24"
                    app:tint="@color/white" />

                <View
                    android:id="@+id/viewRectangle118"
                    android:layout_width="50dp"
                    android:layout_height="4dp"
                    android:gravity="start|center_vertical"
                    android:layout_marginStart="117dp"
                    android:background="@color/white" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout android:id="@+id/linearTicketinfo"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginEnd="27dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="137dp"
            android:orientation="vertical">

            <LinearLayout android:id="@+id/linearTitlebalans"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView android:ellipsize="end"
                    android:id="@+id/txtHacerapuesta"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="8dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Hacer apuesta"/>

                <LinearLayout android:id="@+id/linearRowplus"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="187dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnPlus"
                        android:background="@drawable/baseline_add_box_24"
                        android:layout_height="24dp"
                        android:layout_width="24dp"
                        android:scaleType="fitCenter"
                        android:gravity="center"
                        android:src="@drawable/baseline_add_box_24"
                        app:tint="@color/white"
                        tools:ignore="ContentDescription"/>

                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPrice"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="6dp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="200€"/>

                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/lineBorder"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:background="@color/white" />

            <LinearLayout android:gravity="start"
                android:id="@+id/linearInfo"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent" android:orientation="vertical">

                <LinearLayout android:id="@+id/linearRowbarcelonarea"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="9dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <TextView android:ellipsize="end"
                        android:id="@+id/txtBarcelonaRea"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:gravity="start|center_vertical"
                        android:text="Barcelona - Real Madrid"/>

                    <LinearLayout android:id="@+id/linearRowpaaalus"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="142dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/viewEllipseTwoOne"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@color/orange"
                            android:gravity="center" />

                        <TextView android:ellipsize="end"
                            android:id="@+id/txtTime"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="6dp"
                            android:singleLine="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/gray"
                            android:text="49:30"/>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout android:id="@+id/linearRowsegundoequipo"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="9dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent" android:orientation="horizontal">

                    <TextView android:ellipsize="end"
                        android:id="@+id/txtSegundoequipo"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/gray"
                        android:text="Segundo equipo va ganando"/>

                    <TextView android:ellipsize="end"
                        android:id="@+id/txtThirteen"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="141dp"
                        android:layout_weight="0.14"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="2.1"/>
                </LinearLayout>

                <LinearLayout android:id="@+id/linearRowapostar"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="9dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent" android:orientation="horizontal">

                    <LinearLayout android:id="@+id/linearRowpriceOne"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:background="@drawable/border_white_direct"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtPriceOne"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="11dp"
                            android:layout_weight="0.46"
                            android:gravity="center"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="200€" />

                        <TextView android:ellipsize="end"
                            android:id="@+id/txtOne"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="11dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="13dp"
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:background="@drawable/baseline_arrow_forward_24"/>

                        <TextView android:ellipsize="end"
                            android:id="@+id/txtPriceTwo"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="11dp"
                            android:layout_marginEnd="29dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="13dp"
                            android:layout_weight="0.44"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="@color/green"
                            android:text="420€"/>

                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:ellipsize="end"
                        android:gravity="center"
                        android:id="@+id/btnApostar"
                        android:layout_height="41dp"
                        android:layout_marginStart="8dp"
                        android:layout_width="125dp"
                        android:paddingBottom="12dp"
                        android:paddingEnd="30dp"
                        android:paddingStart="30dp"
                        android:paddingTop="12dp"
                        android:singleLine="true"
                        android:textAllCaps="false"
                        android:background="@drawable/black_direct"
                        android:textColor="@color/white"
                        android:text="Apostar"/>
                </LinearLayout>

                <LinearLayout android:id="@+id/linearPattern"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPriceThree"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.17"
                        android:layout_width="0dp"
                        android:paddingBottom="8dp"
                        android:paddingEnd="17dp"
                        android:paddingStart="17dp"
                        android:paddingTop="9dp"
                        android:singleLine="true"
                        android:background="@drawable/border_white_direct"
                        android:textColor="@color/black"
                        android:text="5€"/>

                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPriceFour"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="0.17"
                        android:layout_width="0dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="13dp"
                        android:paddingTop="9dp"
                        android:singleLine="true"
                        android:background="@drawable/border_white_direct"
                        android:textColor="@color/black"
                        android:text="20€"/>

                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPriceFive"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="0.17"
                        android:layout_width="0dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="13dp"
                        android:paddingTop="9dp"
                        android:singleLine="true"
                        android:background="@drawable/border_white_direct"
                        android:textColor="@color/black"
                        android:text="50€"/>

                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPriceSix"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="0.17"
                        android:layout_width="0dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="10dp"
                        android:paddingTop="9dp"
                        android:singleLine="true"
                        android:background="@drawable/border_white_direct"
                        android:textColor="@color/black"
                        android:text="100€"/>

                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPriceSeven"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="0.17"
                        android:layout_width="0dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="10dp"
                        android:paddingTop="9dp"
                        android:singleLine="true"
                        android:background="@drawable/black_direct"
                        android:textColor="@color/white"
                        android:text="200€"/>

                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPriceEight"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="0.17"
                        android:layout_width="0dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="10dp"
                        android:paddingTop="9dp"
                        android:singleLine="true"
                        android:background="@drawable/border_white_direct"
                        android:textColor="@color/black"
                        android:text="500€"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>