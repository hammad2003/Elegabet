<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameApuesta"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearColumnarrowleft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:id="@+id/toolbarToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:id="@+id/linearRowarrowleft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/flecaiconatrashome3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_back_ios_new_24"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/txtFONDOS"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="117dp"
                    android:gravity="start|center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="FONDOS"
                    android:textAllCaps="true" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="83dp"
            android:layout_marginEnd="83dp"
            android:layout_marginTop="25dp"
            android:singleLine="true"
            android:text="0.00€"
            android:textSize="27dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:background="@drawable/gray_direct">

            <LinearLayout
                android:id="@+id/linearObject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.73"
                android:orientation="vertical"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnImporte"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Importe"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/black_direct"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtLabelOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.27"
                android:layout_marginStart="49dp"
                android:layout_marginEnd="55dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:singleLine="true"
                android:text="Retirar"
                android:textColor="@color/black"
                android:ellipsize="end" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRowcomputer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <!-- Primer LinearLayout -->
            <LinearLayout
                android:id="@+id/linearVariants"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginRight="8dp"
                android:gravity="start"
                android:orientation="vertical"
                android:textColor="@color/white"
                android:background="@drawable/red_direct">

                <ImageView
                    android:id="@+id/imageComputer"
                    android:layout_width="19dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="111dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/baseline_credit_card_24"
                    app:tint="@color/white"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/baseline_credit_card_24"/>

                <TextView
                    android:id="@+id/txtVisacard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="19dp"
                    android:layout_marginBottom="19dp"
                    android:singleLine="true"
                    android:text="Visa Card"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:ellipsize="end"/>

            </LinearLayout>

            <!-- Segundo LinearLayout -->
            <LinearLayout
                android:id="@+id/linearVariants1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginLeft="8dp"
                android:gravity="end"
                android:orientation="vertical"
                android:background="@drawable/gray_direct">

                <ImageView
                    android:id="@+id/imageFavorite"
                    android:layout_width="18dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="111dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/apple_logo"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/apple_logo"/>

                <TextView
                    android:id="@+id/txtApplePay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="49dp"
                    android:layout_marginBottom="16dp"
                    android:singleLine="true"
                    android:text="Apple Pay"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:ellipsize="end"/>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/txtCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:paddingStart="12dp"
            android:paddingTop="17dp"
            android:paddingBottom="15dp"
            android:text="4567 **** **** 7702"
            android:textStyle="bold"
            android:gravity="start"
            android:singleLine="true"
            android:background="@drawable/border_gray_direct"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/txtPriceOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="12dp"
            android:paddingTop="17dp"
            android:paddingBottom="16dp"
            android:text="200€"
            android:gravity="start"
            android:singleLine="true"
            android:background="@drawable/border_gray_direct"
            android:ellipsize="end" />

        <LinearLayout
            android:id="@+id/linearRowgroupone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/txtAceptolostrm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="13dp"
                android:layout_marginTop="1dp"
                android:layout_weight="0.91"
                android:gravity="start|center_vertical"
                android:text="Acepto los términos de uso de los servicios" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDepositarCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingStart="30dp"
            android:paddingTop="16dp"
            android:paddingEnd="30dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:text="Depositar cantidad"
            android:textAllCaps="false"
            android:background="@drawable/black_direct"
            android:textColor="@color/white"
            android:singleLine="true" />
    </LinearLayout>
</FrameLayout>