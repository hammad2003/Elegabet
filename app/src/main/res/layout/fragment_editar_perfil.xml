<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearMisdatosThree"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <ImageView
        android:id="@+id/flecaiconatrashome1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        android:layout_margin="16dp"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/imageLock"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="41dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        app:tint="@color/white"
        android:src="@drawable/baseline_person_24"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txtMisdatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="41dp"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:text="Mis datos"
        android:textSize="27sp"
        android:textColor="@color/white"
        android:ellipsize="end"
        tools:ignore="HardcodedText" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="17dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="#EE009D"
        app:cardElevation="4dp"
        android:clipToOutline="true"
        android:outlineProvider="background"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/peterparker" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEditarDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="17dp"
        android:text="EDITAR DATOS"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/red_direct"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingStart="30dp"
        android:paddingTop="12dp"
        android:paddingEnd="30dp"
        android:paddingBottom="12dp"
        android:singleLine="true"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnLock"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@color/ELEGABET"
            android:paddingHorizontal="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mail"
            android:layout_gravity="center_vertical"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Your name"
                android:textSize="10sp"
                android:textColor="@color/gray"
                android:layout_marginLeft="8dp" />

            <EditText
                android:id="@+id/etEggMAIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peter Parker"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/ELEGABET"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="8dp"
                tools:ignore="Autofill" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnLock1"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@color/ELEGABET"
            android:paddingHorizontal="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mail"
            android:layout_gravity="center_vertical"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Your email"
                android:textSize="10sp"
                android:textColor="@color/gray"
                android:layout_marginLeft="8dp" />

            <EditText
                android:id="@+id/etEggMAIL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="spiderman@gmail.com"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/ELEGABET"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="8dp"
                tools:ignore="Autofill" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnLock2"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@color/ELEGABET"
            android:paddingHorizontal="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mail"
            android:layout_gravity="center_vertical"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Your password"
                android:textSize="10sp"
                android:textColor="@color/gray"
                android:layout_marginLeft="8dp" />

            <EditText
                android:id="@+id/etEggMAIL2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="***************"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/ELEGABET"
                android:inputType="textPassword"
                android:layout_marginLeft="8dp"
                tools:ignore="Autofill" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>